- content_for :page_title do
  = t('.title')

.bootstrap_header_padding

.container-fluid
  .row-fluid
    .container.container-margin-top
      .col-md-4
        #section_header
          .container-box
            %h3
              = t('privacy')
            = render 'shared/settings_nav'

      .col-md-8.col-md-8-left
        .container-box
          .span3
          .span5
            %h3
              = t('.ignored_users')

            - @blocks.each do |block|
              = block.person_name
              \-
              = link_to t('.stop_ignoring'), block_path(block),
                :method => :delete
              %br
          .span3
