.bootstrap_header_padding

.container-fluid
  .row-fluid 
    .container.container-margin-top
      .col-md-4
        #section_header
          .container-box
            %h3
              = t('settings')
            = render 'shared/settings_nav'

      .col-md-8.col-md-8-left
        .container-box
          .span3
          .span6
            - content_for :submit_block do
              .pull-right
                = link_to t('cancel'), local_or_remote_person_path(current_user.person), :class => "btn"
                = submit_tag t('.update_profile'), :class => "creation", :id => "update_profile", :class => "btn btn-sm btn-primary"
              .clearfix
            = render :partial => 'edit', :locals => {:person => @person, 
              :profile => @profile, :aspect => @aspect, :step => @step}
          .span3

