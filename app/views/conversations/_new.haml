= form_for Conversation.new, html: {class: "form_do_not_clear"}, remote: true do |conversation|
  .control-group.form-group
    %label.control-label{:for => 'contact_ids'}
      = t('.to')
    .controls
      = text_field_tag "contact_autocomplete"
  .control-group.form-group
    %label.control-label{:for => 'conversation_subject'}
      = t('.subject')
    .controls
      = conversation.text_field :subject, :class => 'input-block-level form-control input-sm'
  .control-group.form-group
    .controls
      = text_area_tag "conversation[text]", '', :rows => 5, :class => 'input-block-level form-control input-sm'
  .control-group.form-group
    .controls
      .pull-right
        = conversation.submit t('.send'), 'data-disable-with' => t('.sending'), :class => 'btn btn-primary btn-sm creation'
      .clearfix
